<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="446dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Meu Perfil"
                        android:textColor="@color/colorAzul"
                        android:textSize="24sp" />

                    <ImageView

                        android:id="@+id/imageView"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/frutaperfil" />

                    <TextView
                        android:id="@+id/txtNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="Nome"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black"
                        android:textSize="25dp"
                        app:fontFamily="@font/montserrat" />

                    <TextView
                        android:id="@+id/txtUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="15dp"
                        android:text="usuario"
                        android:textSize="20dp"
                        app:fontFamily="@font/montserrat" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/btnEditarPerfil"
                            android:layout_width="127dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorAzul"
                            android:fontFamily="@font/montserrat"
                            android:text="Editar Perfil"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@android:color/background_light" />

                        <Button
                            android:id="@+id/btnAmigos"
                            android:layout_width="126dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorAzul"
                            android:fontFamily="@font/montserrat"
                            android:text="Amigos"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@android:color/background_light" />

                        <Button
                            android:id="@+id/btnSolici"
                            android:layout_width="120dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorAzul"
                            android:fontFamily="@font/montserrat"
                            android:text="Solicitações"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@android:color/background_light" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            app:srcCompat="@drawable/dados" />

                        <TextView
                            android:id="@+id/txtEmaill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="Email"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            app:fontFamily="@font/montserrat" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="email"
                        android:textSize="15sp"
                        app:fontFamily="@font/montserrat" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView222"
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            app:srcCompat="@drawable/niver" />

                        <TextView
                            android:id="@+id/txtAniv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="Aniversário"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            app:fontFamily="@font/montserrat" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtDataNasc"
                        android:layout_width="359dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:text="Clique no botão 'Editar Perfil' para adicionar sua data de aniversário"
                        android:textSize="14sp"
                        app:fontFamily="@font/montserrat" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView22"
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            app:srcCompat="@drawable/biografia" />

                        <TextView
                            android:id="@+id/txtBiografia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="Biografia"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            app:fontFamily="@font/montserrat" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtBio"
                        android:layout_width="357dp"
                        android:layout_height="54dp"
                        android:layout_marginLeft="15dp"
                        android:text="Clique no botão 'Editar Perfil' para adicionar sua biografia"
                        android:textSize="14sp"
                        app:fontFamily="@font/montserrat" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

</RelativeLayout>