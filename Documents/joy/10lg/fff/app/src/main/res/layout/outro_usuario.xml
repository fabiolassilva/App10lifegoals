<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="225dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Nome"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                app:fontFamily="@font/montserrat" />

            <TextView
                android:id="@+id/txtUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@usuario"
                android:textSize="20dp"
                app:fontFamily="@font/montserrat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    app:srcCompat="@drawable/biografia" />

                <TextView
                    android:id="@+id/txtBiografia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Biografia"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:fontFamily="@font/montserrat" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtBio"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Biografia do outro usuário eu sou um outro usuário do aplicativo 10 life goals."
                android:textSize="14sp"
                app:fontFamily="@font/montserrat" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView222"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    app:srcCompat="@drawable/niver" />

                <TextView
                    android:id="@+id/txtAniv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Aniversário"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:fontFamily="@font/montserrat" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDataNasc"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:inputType="date"
                android:text="Aniversário do outro usuário"
                android:textSize="14sp"
                app:fontFamily="@font/montserrat" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="147dp"
                android:layout_height="126dp"
                app:srcCompat="@drawable/frutaperfil" />

            <Button
                android:id="@+id/btnSolicitar"
                android:layout_width="132dp"
                android:layout_height="30dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorAzul"
                android:fontFamily="@font/montserrat"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txtSolic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAzul"
                android:textSize="15dp"
                app:fontFamily="@font/montserrat"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/btnExcluir"
                android:layout_width="132dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:background="@color/colorAzul"
                android:fontFamily="@font/montserrat"
                android:text="Excluir amigo"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSim"
                    android:layout_width="47dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="9dp"
                    android:background="@color/colorAzul"
                    android:fontFamily="@font/montserrat"
                    android:text="Sim"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnNao"
                    android:layout_width="47dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="40dp"
                    android:background="@color/colorAzul"
                    android:fontFamily="@font/montserrat"
                    android:text="Não"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/linearlayou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Metas"
                android:textAlignment="center"
                android:textColor="@color/colorAzul"
                android:textSize="20dp"
                app:fontFamily="@font/montserrat" />

            <ListView
                android:id="@+id/listaMetasPerfil"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:fontFamily="@font/montserrat">

            </ListView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>